<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#ffffff" />

            <corners
                android:radius="4dp"
                android:topLeftRadius="2dp"
                android:topRightRadius="2dp" />

            <stroke
                android:width="1dp"
                android:color="#f2700a" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

</layer-list>
